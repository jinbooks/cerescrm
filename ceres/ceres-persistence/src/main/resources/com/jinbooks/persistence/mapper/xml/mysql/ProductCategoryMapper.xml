<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jinbooks.persistence.mapper.ProductCategoryMapper">

    <!-- 分页查询 -->
    <select id="pageList" parameterType="com.jinbooks.entity.product.dto.ProductCategoryPageDto"
            resultType="ProductCategory">
        SELECT
        	*
        FROM jbx_product_category jpc
        WHERE jpc.deleted = 'n'
        <!-- 根据参数过滤 -->
        	and jpc.workspace_id = #{dto.workspaceId}
        <if test="dto.code != null and dto.code != ''">
            AND jpc.code = #{dto.code}
        </if>
        <if test="dto.name != null and dto.name != ''">
            AND jpc.name LIKE CONCAT('%', #{dto.name}, '%')
        </if>
		order by jpc.code
    </select>

</mapper>
